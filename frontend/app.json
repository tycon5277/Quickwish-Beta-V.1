{
  "expo": {
    "name": "QuickWish",
    "slug": "quickwish",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "quickwish",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Find nearby helpers in your area",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Track location for wish fulfillment",
        "NSCameraUsageDescription": "Attach photos to your wish requests",
        "NSPhotoLibraryUsageDescription": "Attach images from gallery to wishes",
        "NSMicrophoneUsageDescription": "Record voice notes for wish details"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6366F1"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow QuickWish to use your location for finding nearby helpers."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Attach images from gallery to wishes",
          "cameraPermission": "Attach photos to your wish requests"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Record voice notes for wish details"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
